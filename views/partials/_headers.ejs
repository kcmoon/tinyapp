<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user === undefined) { %>
    <form class="form-inline" action="/login" method="POST">
      <div class="form-group mb-2">
        <label for="longURL">Please Log In:</label>
        <input class="form-control" type="text" name="username" style="width: 200px; margin-left: 1em">
        <button type="submit" class="btn btn-dark">Submit</button>
      </div>
    </form>
      <% } else { %>
        <form class="form-inline" action="/logout" method="POST">
          <div class="form-group mb-2">
            <label for="logout">Signed in as: <%= user.email %>!</label>
            <button type="submit" class="btn btn-light">Logout</button>
          </div>
        </form>
        <% } %>
  </nav>
</header>
